{
  "variables": {
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": true,
      "run_command": [
        "-d", "-i", "-t", "{{.Image}}", "/bin/bash"
      ],
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV PATH /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:~/.cargo/bin:/usr/local/go/bin:/root/go/bin"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /tmp/studio/"
      ]
    },
    {
      "type": "shell",
      "script": "provisioners/puppet.sh"
    },
    {
      "type": "puppet-masterless",
      "puppet_bin_dir": "/opt/puppetlabs/bin/",
      "extra_arguments": "--debug",
      "staging_directory": "/tmp/studio",
      "manifest_file": "provisioners/studio.pp",
      "module_paths": [
        "modules",
        "modules-extra"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "rm -rf /tmp/studio/"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "cliffano/studio",
      "tag": "latest",
      "only": [
        "docker"
      ]
    }
  ]
}
